<view class="page">
  <view class="page__bd page__bd_spacing">
    <view class="userAvatar">
      <image src="{{currentUser.avatarUrl}}">

      </image>

    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="nickNameText">{{currentUser.nickName}}</view>
      </view>
    </view>

    <mp-cells ext-class="my-cells" title="用户操作列表">
      <mp-cell 
        link 
        url="/pages/users/editName/editName" 
        value="修改昵称" >
        <mp-icon 
          style="margin-right:6px;vertical-align: middle;"
          icon="me" 
          slot="icon" 
          color="green" 
          size="30">
        </mp-icon>
      </mp-cell>
      <mp-cell 
        link 
        url="/pages/projects/userList/userList" 
        value="查看成员" >
         <mp-icon 
          style="margin-right:6px;vertical-align: middle;"
          icon="note" 
          slot="icon" 
          color="green" 
          size="30">
        </mp-icon>
      </mp-cell>
    </mp-cells>

    <mp-cells 
    ext-class="my-cells" 
    title="项目操作列表（管理员可见)" 
    wx:if="{{currentUserIsProjectAdmin}}"
    >
       <mp-cell 
        link 
        url="/pages/projects/allUserList/allUserList" 
        value="成员管理" >
         <mp-icon 
          style="margin-right:6px;vertical-align: middle;"
          icon="contacts" 
          slot="icon" 
          color="green" 
          size="30">
        </mp-icon>
        </mp-cell>
      
    </mp-cells>

    <button 
      class="weui-btn backToProjectListBtn " 
      type="primary" 
      bindtap="backToProjectList" >
      重选项目
    </button>
   

  </view>
</view>