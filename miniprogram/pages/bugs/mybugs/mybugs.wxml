<view class="page">
  <view class="page__bd">
    <mp-searchbar search="{{searchBugList}}" placeholder="搜索内容"></mp-searchbar>

    <mp-cells title="我提交的问题明细" footer="点击查看可查看详情！">
    <view wx:for="{{bugList}}" wx:key="key">
      <mp-cell 
        link 
        url="/pages/bugs/detail/detail?bugID={{item._id}}"  
        value="{{item.title}}" 
        footer="{{item.prior}}"  
      >
        <mp-icon 
          style="margin-right:3px;vertical-align: middle;"
          icon="time" 
          color="green" 
          size="30"
          slot="icon"
          wx:if="{{item.status === 2}}"
      >
      </mp-icon>
      <mp-icon 
          style="margin-right:3px;vertical-align: middle;"
          icon="at" 
          color="green" 
          size="30"
          slot="icon"
          wx:if="{{item.status === 3}}"
      >
      </mp-icon>、<mp-icon 
          style="margin-right:3px;vertical-align: middle;"
          icon="done" 
          color="green" 
          size="30"
          slot="icon"
          wx:if="{{item.status === 4}}"
      >
      </mp-icon>
      <mp-icon 
          style="margin-right:3px;vertical-align: middle;"
          icon="pencil" 
          color="green" 
          size="30"
          slot="icon"
          wx:if="{{item.status === 5}}"
      >
      </mp-icon>
      </mp-cell>
    
    
    
    </view>
      

    </mp-cells>


    <button type="primary" bindtap="addBugDetailAction"> 添加问题 </button>
  </view>
</view>