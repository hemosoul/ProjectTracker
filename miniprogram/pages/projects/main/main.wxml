<view class="page">
  <view class="page__bd">
    <mp-searchbar search="{{searchBugList}}" placeholder="搜索内容"></mp-searchbar>

    <mp-cells title="问题跟踪列表" footer="点击查看可查看详情！">
    <view wx:for="{{bugList}}" wx:key="key">
      <mp-cell link url="/pages/bugs/detail/detail?bugID={{item._id}}"  value="{{item.title}}({{item.prior}})" footer="查看"   >
        <view wx:if="{{item.status === 2}}" slot="icon">🎯</view>
        <view wx:elif="{{item.status === 3}}" slot="icon">👌d</view>
        <view wx:elif="{{item.status === 4}}" slot="icon">✅</view>
        <view wx:elif="{{item.status === 5}}" slot="icon">📙</view>
      </mp-cell>
    
    
    
    </view>
      

    </mp-cells>


    <button type="primary" bindtap="addBugDetailAction"> 添加问题 </button>
  </view>
</view>